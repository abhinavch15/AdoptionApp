<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abhinavchinta.adoptionapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginPage"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserAreaActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        />
        <activity
            android:name=".Card1Activity"
            android:label="@string/title_activity_card1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Card2Activity"
            android:label="@string/title_activity_card2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Card3Activity"
            android:label="@string/title_activity_card3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Card4Activity"
            android:label="@string/title_activity_card4"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>